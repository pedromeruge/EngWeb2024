extends layout 

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Editar periodo
    
        form.w3-container(method="POST")
            fieldset
                legend Dados
                label Id
                input.w3-input.w3-round(type="text" name="id" readonly value= periodo.id)
                label Nome
                input.w3-input.w3-round(type="text" name="nome" readonly value= periodo.nome)
                label Intervalo temporal
                input.w3-input.w3-round(type="text" name="data" value= periodo.data)
            fieldset
                legend Mais informações
                label Descricao
                input.w3-input.w3-round(type="text" name="descricao" maxlength = "1000" value= periodo.descricao)

            button.w3-btn.w3-purple.w3-section(type="submit") Confirmar
        footer.w3-container.w3-purple
            address Generated by EngWeb2024 in #{date}
                a(href="/periodos") [Voltar a periodos]