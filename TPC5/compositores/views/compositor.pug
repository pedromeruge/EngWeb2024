extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1= data.nome
        .w3-container
            p 
                b Id: 
                span= data.id
            
            p 
                b Nome: 
                span= data.nome
            p 
                b Data de nascimento: 
                span= data.dataNasc
            p 
                b Data de óbito: 
                span= data.dataObito
            p 
                b Período: 
                a(href="/periodos/" + data.periodo[0]) #{data.periodo[1]}
            p 
                b Biografia:
            p #{data.bio}

        footer.w3-container.w3-teal
            address Generated by EngWeb2024 in #{date} - 
                a(href="/compositores") [Voltar a compositores]
