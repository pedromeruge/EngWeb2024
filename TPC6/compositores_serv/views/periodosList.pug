extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-teal
            h1 Lista de períodos
                a.add-button.w3-btn.w3-round.w3-red(href="/periodos/register") +   

        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Nome
                    th Data
                    th Ações

                each periodo in data
                    tr
                        td= periodo._id
                        td 
                            a(href="/periodos/" + periodo._id) #{periodo.nome}
                        td= periodo.data
                        td 
                           a(href="/periodos/edit/" + periodo._id) [Edit]
                           a(href="/periodos/delete/" + periodo._id) [Delete]

            footer.w3-container.w3-blue
                address Generated by EngWeb2024 in #{date}