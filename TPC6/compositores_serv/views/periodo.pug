extends layout 

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1= data.nome

        .w3-container
            p 
                b Id: 
                span= data._id
            p 
                b Nome: 
                span= data.nome
            p 
                b Intervalo temporal: 
                span= data.data
            p 
                b Descricao:
            p= data.descricao

            - var hasCompositores = data.compositores.length > 0
            
            p 
                b Compositores:
            if hasCompositores 
                ul
                each compositor in data.compositores 
                    li 
                        a(href="/compositores/" + compositor[0]) #{compositor[1]}
            else 
                p Sem compositores associados

        .footer.w3-container.w3-teal
            address Generated by EngWeb2024 in #{date} - 
                a(href="/periodos") [Voltar a periodos]
