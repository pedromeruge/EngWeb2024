extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Criar Pessoa
    
        form.w3-container(method="POST" onsubmit="prepareFormData()")
            fieldset
                legend Dados
                
                label Nome
                input.w3-input.w3-round(type="text" name="nome")

                label Idade
                input.w3-input.w3-round(type="number" name="idade")

                label Sexo
                select.w3-select.w3-border(name="sexo")
                    option(value="masculino") Masculino
                    option(value="feminino") Feminino
                    option(value="outro") Outro
                    
                label Morada
                input.w3-input.w3-round(type="text" name="moradaCidade" placeholder="Cidade")
                input.w3-input.w3-round(type="text" name="moradaDistrito" placeholder="Distrito")

                label Documento de identificação
                input.w3-input.w3-round(type="text" name="BI" placeholder="BI")
                input.w3-input.w3-round(type="text" name="CC" placeholder="CC")

                label Descrição
                textarea.w3-input.w3-round(type="text" name="descrição" rows="2")

                label Profissão
                input.w3-input.w3-round(type="text" name="profissao")

                label Partido Político
                input.w3-input.w3-round(type="text" name="partidoNome" placeholder="Nome do partido")
                input.w3-input.w3-round(type="text" name="partidoAbbr" placeholder="Abreviatura do partido")

                label Religião
                input.w3-input.w3-round(type="text" name="religiao" placeholder="CR7")

                label Desportos
                input.w3-input.w3-round(type="text" name="desportos" placeholder="Separados por vírgulas Ex: desporto1,desporto2,desporto3,...")

                label Animais
                input.w3-input.w3-round(type="text" name="animais" placeholder="Separados por vírgulas Ex: Cão,gato,gão,...")

                label Figuras Públicas Portuguesas
                input.w3-input.w3-round(type="text" name="figura_publica_pt" placeholder="Separadas por vírgulas Ex: João,Joana,Joãona,...")

                label Marca de Carro
                input.w3-input.w3-round(type="text" name="marca_carro")

                label Destinos Favoritos
                input.w3-input.w3-round(type="text" name="destinos_favoritos" placeholder="Separados por vírgulas Ex: Braga,Porto,Lisboa,...")

                label Comida Favorita 
                input.w3-input.w3-round(type="text" name="comidaFavorita" placeholder="Tremoços")
            fieldset 
                legend Atributos

                div 
                    label Gosta de fumar 
                    input(type="checkbox" name="fumador")
                div 
                    label Gosta de cinema 
                    input(type="checkbox" name="gostaCinema")
                div 
                    label Gosta de viajar 
                    input(type="checkbox" name="gostaViajar")
                div 
                    label Acorda cedo 
                    input(type="checkbox" name="acordaCedo")
                div 
                    label Gosta de ler 
                    input(type="checkbox" name="gostaLer")
                div 
                    label Gosta de música 
                    input(type="checkbox" name="gostaMusica")
                div 
                    label Gosta de comer 
                    input(type="checkbox" name="gostaComer")
                div 
                    label Gosta de animais de estimação 
                    input(type="checkbox" name="gostaAnimaisEstimacao")
                div 
                    label Gosta de dançar 
                    input(type="checkbox" name="gostaDancar")

            button.w3-btn.w3-purple.w3-section(type="submit") Registar

        footer.w3-container.w3-purple
            address Generated by EngWeb2024 in #{date} - 
                a(href="/") [Voltar a pessoas]