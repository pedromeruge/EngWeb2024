extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1= data.nome
        .w3-container
            if data.nome
                p 
                    b Nome: 
                    span= data.nome
            if data.idade
                p 
                    b Idade: 
                    span= data.idade
            if data.sexo
                p 
                    b Sexo: 
                    span= data.sexo
            if data.morada.cidade && data.morada.distrito
                p 
                    b Morada: 
                    span= data.morada.cidade + ', ' + data.morada.distrito
            p 
                if data.BI 
                    b BI: 
                    span=data.BI
                else if data.CC
                    b CC: 
                    span=data.CC 

            if data.descrição
                p 
                    b Descrição: 
                    span= data.descrição

            if data.profissao
                p 
                    b Profissão: 
                    span= data.profissao

            if data.partido_politico.party_name && data.partido_politico.party_abbr
                p 
                    b Partido Político: 
                    span= data.partido_politico.party_name + '(' + data.partido_politico.party_abbr + ')'
            if data.religiao
                p 
                    b Religião: 
                    span= data.religiao

            if data.desportos.length > 0
                p 
                    b Desportos:
                    ul
                        each sport in data.desportos
                            li= sport

            if data.animais.length > 0
                p 
                    b Animais:
                    ul
                        each animal in data.animais
                            li= animal

            if data.figura_publica_pt.length > 0
                p 
                    b Figuras Públicas portuguesas:
                    ul
                        each figura in data.figura_publica_pt
                            li= figura

            if data.marca_carro
                p 
                    b Marca de Carro: 
                    span= data.marca_carro

            if data.destinos_favoritos.length > 0
                p 
                    b Destinos Favoritos:
                    ul
                        each destino in data.destinos_favoritos
                            li= destino
            if data.atributos
                p 
                    b Atributos:
                    ul
                        each value, key in data.atributos
                            li= key + ': ' + value

        footer.w3-container.w3-teal
            address Generated by EngWeb2024 in #{date} - 
                a(href="/") [Voltar a pessoas]